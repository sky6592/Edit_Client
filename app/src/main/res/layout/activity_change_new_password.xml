<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_toolbar_height"
                    app:contentInsetStart="@dimen/margin_component_inset_20dp"
                    app:contentInsetEnd="@dimen/margin_component_inset_20dp"
                    android:background="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/ib_back"
                            android:layout_width="@dimen/size_icon_button_24dp"
                            android:layout_height="@dimen/size_icon_button_24dp"
                            android:src="@drawable/icon_back"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/CustomTextViewMidBlack"
                            android:text="@string/tv_change_password"
                            android:textSize="@dimen/size_tv_title_15dp"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            android:background="@color/transparent"
                            android:gravity="center"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>

                <TextView
                    android:id="@+id/tv_password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_change_password_input_new_title"
                    android:textSize="@dimen/size_18dp"
                    android:textColor="@color/mid_black"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_20dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--  new password section  -->
                <TextView
                    android:id="@+id/tv_new_password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomTextViewMidBlack"
                    android:text="@string/tv_password_new"
                    android:textSize="@dimen/size_15dp"
                    android:fontFamily="@font/noto_sans_kr_medium"

                    android:layout_marginTop="@dimen/size_26dp"
                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_password_title"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_42dp"
                    android:background="@drawable/shape_gray_border_box"
                    android:hint="@string/et_password_input_hint"
                    android:maxLines="1"
                    android:maxLength="@integer/length_max_password"
                    android:inputType="textPassword"
                    style="@style/CustomTextViewMidBlack"
                    android:textSize="@dimen/size_15dp"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_14dp"
                    android:paddingLeft="@dimen/size_14dp"
                    android:paddingEnd="@dimen/size_14dp"
                    android:paddingRight="@dimen/size_14dp"
                    android:layout_marginTop="@dimen/size_9dp"
                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                    android:layout_marginEnd="@dimen/margin_component_inset_20dp"
                    android:layout_marginRight="@dimen/margin_component_inset_20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_password_title" />
                <TextView
                    android:id="@+id/tv_new_password_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_password_input_reg"
                    android:textSize="@dimen/size_10dp"
                    android:textColor="@color/gray_shadow"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/noto_sans_kr_medium"

                    android:layout_marginTop="@dimen/size_4dp"
                    app:layout_constraintTop_toBottomOf="@id/et_new_password"
                    app:layout_constraintStart_toStartOf="@id/et_new_password" />

                <!--  re-enter password section  -->
                <TextView
                    android:id="@+id/tv_reenter_password_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomTextViewMidBlack"
                    android:text="@string/tv_password_new"
                    android:textSize="@dimen/size_15dp"
                    android:fontFamily="@font/noto_sans_kr_medium"

                    android:layout_marginTop="@dimen/size_11dp"
                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_new_password_caption"
                    app:layout_constraintStart_toStartOf="parent" />
                <EditText
                    android:id="@+id/et_reenter_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_42dp"
                    android:background="@drawable/shape_gray_border_box"
                    android:hint="@string/et_password_input_reenter_hint"
                    android:maxLines="1"
                    android:maxLength="@integer/length_max_password"
                    android:inputType="textPassword"
                    style="@style/CustomTextViewMidBlack"
                    android:textSize="@dimen/size_15dp"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/size_14dp"
                    android:paddingLeft="@dimen/size_14dp"
                    android:paddingEnd="@dimen/size_14dp"
                    android:paddingRight="@dimen/size_14dp"
                    android:layout_marginTop="@dimen/size_9dp"
                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                    android:layout_marginEnd="@dimen/margin_component_inset_20dp"
                    android:layout_marginRight="@dimen/margin_component_inset_20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_reenter_password_title" />
                <TextView
                    android:id="@+id/tv_reenter_password_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_password_input_not_correct"
                    android:textSize="@dimen/size_10dp"
                    android:textColor="@color/gray_shadow"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/noto_sans_kr_medium"

                    android:layout_marginTop="@dimen/size_4dp"
                    app:layout_constraintTop_toBottomOf="@id/et_reenter_password"
                    app:layout_constraintStart_toStartOf="@id/et_reenter_password" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50dp"
                    android:background="@drawable/selector_btn_bg_purple_active_gray_rectangle"
                    android:enabled="false"
                    android:text="@string/btn_next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_15dp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:layout_marginTop="@dimen/size_50dp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>
</layout>