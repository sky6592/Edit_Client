<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="homeViewModel"
            type="com.doublejj.edit.ui.modules.main.home.HomeViewModel"/>
    </data>

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_main_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_toolbar_height"
                app:contentInsetStart="@dimen/margin_component_inset_20dp"
                app:contentInsetEnd="@dimen/margin_component_inset_20dp"
                android:background="@color/white"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:textColor="@color/purple_active"
                        android:textSize="@dimen/size_toolbar_logo_text"
                        android:background="@color/transparent"
                        android:gravity="center"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    <ImageButton
                        android:id="@+id/ib_refresh"
                        android:layout_width="@dimen/size_icon_button_24dp"
                        android:layout_height="@dimen/size_icon_button_24dp"
                        android:src="@drawable/icon_refresh"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toBottomOf="@id/toolbar_main_home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!--  today's sentence section  -->
                        <ImageButton
                            android:id="@+id/ib_expand_today_sentence"
                            android:layout_width="@dimen/size_icon_button_24dp"
                            android:layout_height="@dimen/size_icon_button_24dp"
                            android:src="@drawable/icon_expand"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"

                            android:layout_marginEnd="@dimen/margin_component_inset_20dp"
                            android:layout_marginRight="@dimen/margin_component_inset_20dp"
                            app:layout_constraintTop_toTopOf="@id/tv_title_today_sentence"
                            app:layout_constraintBottom_toBottomOf="@id/tv_title_today_sentence"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <TextView
                            android:id="@+id/tv_title_today_sentence"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:text="@string/tv_title_today_sentence"
                            style="@style/CustomTextViewMidBlack"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:textSize="@dimen/size_tv_title_15dp"

                            android:paddingTop="@dimen/padding_tv_title_top_and_bottom_17dp"
                            android:paddingBottom="@dimen/padding_tv_title_top_and_bottom_17dp"
                            android:layout_marginStart="@dimen/margin_component_inset_20dp"
                            android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/ib_expand_today_sentence" />
                        <HorizontalScrollView
                            android:id="@+id/hsv_today_sentence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:requiresFadingEdge="horizontal"
                            android:fadingEdgeLength="@dimen/margin_component_inset_20dp"

                            app:layout_constraintTop_toBottomOf="@id/tv_title_today_sentence">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_0"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_1"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_2"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_3"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_4"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_inner_text_start_and_end_20dp" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_inner_text_start_and_end_20dp" />
                            </LinearLayout>
                        </HorizontalScrollView>

                        <!--  first banner section  -->
                        <View
                            android:id="@+id/view_space_0"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_section_10dp"
                            android:background="@color/gray_background"

                            app:layout_constraintTop_toBottomOf="@id/hsv_today_sentence" />
                        <ImageView
                            android:id="@+id/iv_banner_one"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_banner_height"
                            android:src="@drawable/ic_graphic_banner_one"

                            app:layout_constraintTop_toBottomOf="@id/view_space_0" />
                        <View
                            android:id="@+id/view_space_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_section_10dp"
                            android:background="@color/gray_background"

                            app:layout_constraintTop_toBottomOf="@id/iv_banner_one" />

                        <!--  waited comment section  -->
                        <ImageButton
                            android:id="@+id/ib_expand_waited_comment"
                            android:layout_width="@dimen/size_icon_button_24dp"
                            android:layout_height="@dimen/size_icon_button_24dp"
                            android:src="@drawable/icon_expand"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"

                            android:layout_marginEnd="@dimen/margin_component_inset_20dp"
                            android:layout_marginRight="@dimen/margin_component_inset_20dp"
                            app:layout_constraintTop_toTopOf="@id/tv_title_waited_comment"
                            app:layout_constraintBottom_toBottomOf="@id/tv_title_waited_comment"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <TextView
                            android:id="@+id/tv_title_waited_comment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            style="@style/CustomTextViewMidBlack"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:text="@string/tv_title_waited_comment"
                            android:textSize="@dimen/size_tv_title_15dp"

                            android:paddingTop="@dimen/padding_tv_title_top_and_bottom_17dp"
                            android:paddingBottom="@dimen/padding_tv_title_top_and_bottom_17dp"
                            android:layout_marginStart="@dimen/margin_component_inset_20dp"
                            android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                            app:layout_constraintTop_toBottomOf="@id/view_space_1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/ib_expand_waited_comment" />
                        <include
                            android:id="@+id/ll_home_waited_comment_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            layout="@layout/layout_home_sentence_box"

                            app:layout_constraintTop_toBottomOf="@id/tv_title_waited_comment"
                            app:layout_constraintStart_toStartOf="@id/tv_title_waited_comment"
                            app:layout_constraintEnd_toEndOf="@id/ib_expand_waited_comment" />
                        <include
                            android:id="@+id/ll_home_waited_comment_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            layout="@layout/layout_home_sentence_box"

                            android:layout_marginTop="@dimen/size_12dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_0"
                            app:layout_constraintStart_toStartOf="@id/tv_title_waited_comment"
                            app:layout_constraintEnd_toEndOf="@id/ib_expand_waited_comment" />

                        <ImageView
                            android:id="@+id/iv_waited_comment_leaf_tripple"
                            android:layout_width="@dimen/size_iv_leaf_triple_width"
                            android:layout_height="@dimen/size_iv_leaf_triple_height"
                            android:src="@drawable/ic_graphic_leaf_triple"

                            android:layout_marginTop="@dimen/size_11dp"
                            android:layout_marginBottom="@dimen/size_11dp"
                            android:layout_marginStart="@dimen/size_56dp"
                            android:layout_marginLeft="@dimen/size_56dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_1"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <ImageView
                            android:id="@+id/iv_waited_comment_leaf_double"
                            android:layout_width="@dimen/size_iv_leaf_triple_width"
                            android:layout_height="@dimen/size_iv_leaf_triple_height"
                            android:src="@drawable/ic_graphic_leaf_double"

                            android:layout_marginTop="@dimen/size_11dp"
                            android:layout_marginStart="@dimen/size_67dp"
                            android:layout_marginLeft="@dimen/size_67dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_1"
                            app:layout_constraintStart_toEndOf="@id/iv_waited_comment_leaf_tripple" />
                        <ImageView
                            android:id="@+id/iv_waited_comment_flower_red_0"
                            android:layout_width="@dimen/size_iv_flower_red_width"
                            android:layout_height="@dimen/size_iv_flower_red_height"
                            android:src="@drawable/ic_graphic_flower_red"
                            android:rotation="19"

                            android:layout_marginTop="@dimen/size_7dp"
                            android:layout_marginStart="@dimen/size_15dp"
                            android:layout_marginLeft="@dimen/size_15dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_1"
                            app:layout_constraintStart_toStartOf="parent" />
                        <ImageView
                            android:id="@+id/iv_waited_comment_flower_red_1"
                            android:layout_width="@dimen/size_iv_flower_red_width"
                            android:layout_height="@dimen/size_iv_flower_red_height"
                            android:src="@drawable/ic_graphic_flower_red"
                            android:rotation="-19"

                            android:layout_marginTop="@dimen/size_57dp"
                            android:layout_marginStart="@dimen/size_5dp"
                            android:layout_marginLeft="@dimen/size_5dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_1"
                            app:layout_constraintStart_toEndOf="@id/iv_waited_comment_leaf_tripple" />
                        <ImageView
                            android:id="@+id/iv_waited_comment_flower_red_2"
                            android:layout_width="@dimen/size_iv_flower_red_width"
                            android:layout_height="@dimen/size_iv_flower_red_height"
                            android:src="@drawable/ic_graphic_flower_red"
                            android:rotation="38"

                            android:layout_marginTop="@dimen/size_5dp"
                            android:layout_marginEnd="@dimen/size_20dp"
                            android:layout_marginRight="@dimen/size_20dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_1"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <ImageView
                            android:id="@+id/iv_waited_comment_flower_yellow_0"
                            android:layout_width="@dimen/size_iv_flower_yellow_width"
                            android:layout_height="@dimen/size_iv_flower_yellow_height"
                            android:src="@drawable/ic_graphic_flower_yellow"
                            android:rotation="-12"

                            android:layout_marginTop="@dimen/size_25dp"
                            android:layout_marginStart="@dimen/size_26dp"
                            android:layout_marginLeft="@dimen/size_26dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_1"
                            app:layout_constraintStart_toEndOf="@id/iv_waited_comment_leaf_tripple" />
                        <ImageView
                            android:id="@+id/iv_waited_comment_flower_yellow_1"
                            android:layout_width="@dimen/size_iv_flower_yellow_width"
                            android:layout_height="@dimen/size_iv_flower_yellow_height"
                            android:src="@drawable/ic_graphic_flower_yellow"

                            android:layout_marginTop="@dimen/size_54dp"
                            android:layout_marginStart="@dimen/size_6dp"
                            android:layout_marginLeft="@dimen/size_6dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_1"
                            app:layout_constraintStart_toEndOf="@id/iv_waited_comment_leaf_double" />

                        <!--  second banner section  -->
                        <View
                            android:id="@+id/view_space_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_section_10dp"
                            android:background="@color/gray_background"

                            android:layout_marginTop="@dimen/size_100dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_waited_comment_1" />
                        <ImageView
                            android:id="@+id/iv_banner_two"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_banner_height"
                            android:src="@drawable/ic_graphic_banner_two"

                            app:layout_constraintTop_toBottomOf="@id/view_space_2" />
                        <View
                            android:id="@+id/view_space_3"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/margin_section_10dp"
                            android:background="@color/gray_background"

                            app:layout_constraintTop_toBottomOf="@id/iv_banner_two" />

                        <!--  waited comment section  -->
                        <ImageButton
                            android:id="@+id/ib_expand_sympathy_comment"
                            android:layout_width="@dimen/size_icon_button_24dp"
                            android:layout_height="@dimen/size_icon_button_24dp"
                            android:src="@drawable/icon_expand"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"

                            android:layout_marginEnd="@dimen/margin_component_inset_20dp"
                            android:layout_marginRight="@dimen/margin_component_inset_20dp"
                            app:layout_constraintTop_toTopOf="@id/tv_title_sympathy_comment"
                            app:layout_constraintBottom_toBottomOf="@id/tv_title_sympathy_comment"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <TextView
                            android:id="@+id/tv_title_sympathy_comment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            style="@style/CustomTextViewMidBlack"
                            android:fontFamily="@font/noto_sans_kr_bold"
                            android:text="@string/tv_title_best_sentence_of_sympathy"
                            android:textSize="@dimen/size_tv_title_15dp"

                            android:paddingTop="@dimen/padding_tv_title_top_and_bottom_17dp"
                            android:paddingBottom="@dimen/padding_tv_title_top_and_bottom_17dp"
                            android:layout_marginStart="@dimen/margin_component_inset_20dp"
                            android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                            app:layout_constraintTop_toBottomOf="@id/view_space_3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="@id/ib_expand_sympathy_comment" />
                        <include
                            android:id="@+id/ll_home_sympathy_comment_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            layout="@layout/layout_home_sentence_box"

                            app:layout_constraintTop_toBottomOf="@id/tv_title_sympathy_comment"
                            app:layout_constraintStart_toStartOf="@id/tv_title_sympathy_comment"
                            app:layout_constraintEnd_toEndOf="@id/ib_expand_sympathy_comment" />
                        <include
                            android:id="@+id/ll_home_sympathy_comment_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            layout="@layout/layout_home_sentence_box"

                            android:layout_marginTop="@dimen/size_12dp"
                            app:layout_constraintTop_toBottomOf="@id/ll_home_sympathy_comment_0"
                            app:layout_constraintStart_toStartOf="@id/tv_title_sympathy_comment"
                            app:layout_constraintEnd_toEndOf="@id/ib_expand_sympathy_comment" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="@dimen/size_20dp"

                            app:layout_constraintTop_toBottomOf="@id/ll_home_sympathy_comment_1"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_mentee"
                android:layout_width="@dimen/size_fab_56dp"
                android:layout_height="@dimen/size_fab_56dp"

                android:src="@drawable/icon_fab"
                app:backgroundTint="@color/purple_active"
                app:fabSize="normal"
                android:scaleType="center"
                android:contentDescription="@string/fab_description_mentee"

                android:layout_margin="@dimen/margin_fab_outer_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>