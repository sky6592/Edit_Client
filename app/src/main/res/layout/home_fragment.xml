<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="homeViewModel"
            type="com.doublejj.edit.ui.modules.main.home.HomeViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbar_main_home"
                layout="@layout/toolbar_main_home"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"

                app:layout_constraintTop_toBottomOf="@id/toolbar_main_home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_today_sentence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_title_today_sentence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/tv_title_today_sentence"
                            style="@style/CustomTextViewMidBlack"
                            android:textStyle="bold"
                            android:textSize="@dimen/size_tv_title_15dp"

                            android:paddingTop="@dimen/padding_tv_title_top_and_bottom_17dp"
                            android:paddingBottom="@dimen/padding_tv_title_top_and_bottom_17dp"
                            android:layout_marginStart="@dimen/margin_component_inset_20dp"
                            android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                        <ImageButton
                            android:id="@+id/ib_expand_today_sentence"
                            android:layout_width="@dimen/size_icon_button_24dp"
                            android:layout_height="@dimen/size_icon_button_24dp"
                            android:src="@drawable/icon_expand"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"

                            android:layout_marginEnd="@dimen/margin_component_inset_20dp"
                            android:layout_marginRight="@dimen/margin_component_inset_20dp"
                            app:layout_constraintTop_toTopOf="@id/tv_title_today_sentence"
                            app:layout_constraintBottom_toBottomOf="@id/tv_title_today_sentence"
                            app:layout_constraintEnd_toEndOf="parent" />
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            android:requiresFadingEdge="horizontal"
                            android:fadingEdgeLength="@dimen/margin_component_inset_20dp"

                            app:layout_constraintTop_toBottomOf="@id/tv_title_today_sentence"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_0"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_1"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_2"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_3"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_zero_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence_zero_4"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                <include
                                    android:id="@+id/cv_home_today_sentence_0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/cardview_home_today_sentence"

                                    android:layout_marginTop="@dimen/margin_card_top_space"
                                    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp"
                                    android:layout_marginStart="@dimen/margin_component_inset_20dp"
                                    android:layout_marginLeft="@dimen/margin_component_inset_20dp"
                                    android:layout_marginEnd="@dimen/margin_card_end_space"
                                    android:layout_marginRight="@dimen/margin_card_end_space" />
                                
                            </LinearLayout>
                        </HorizontalScrollView>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_mentee"
                android:layout_width="@dimen/size_fab_56dp"
                android:layout_height="@dimen/size_fab_56dp"

                android:src="@drawable/icon_fab"
                app:backgroundTint="@color/purple_active"
                app:fabSize="normal"
                android:scaleType="center"
                android:contentDescription="@string/fab_description_mentee"

                android:layout_margin="@dimen/margin_fab_outer_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>