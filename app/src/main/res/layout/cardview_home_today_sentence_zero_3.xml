<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_card_radius_7dp"
    android:elevation="10dp"

    android:layout_marginTop="@dimen/margin_card_inner_text_start_and_end_20dp"
    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/size_card_home_today_sentence_width"
        android:layout_height="@dimen/size_card_home_today_sentence_height">
        <ImageView
            android:id="@+id/iv_flower_red"
            android:layout_width="@dimen/size_iv_flower_red_width"
            android:layout_height="@dimen/size_iv_flower_red_height"
            android:src="@drawable/ic_graphic_flower_red"
            android:scaleType="fitXY"

            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginStart="@dimen/size_63dp"
            android:layout_marginLeft="@dimen/size_63dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageView
            android:id="@+id/iv_leaf_double"
            android:layout_width="@dimen/size_iv_leaf_double_width"
            android:layout_height="@dimen/size_iv_leaf_double_height"
            android:src="@drawable/ic_graphic_leaf_double"
            android:scaleType="fitXY"
            android:rotation="23"

            android:layout_marginTop="@dimen/size_10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_flower_red" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>