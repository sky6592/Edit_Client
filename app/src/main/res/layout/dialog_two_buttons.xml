<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_280dp"
    android:layout_height="@dimen/size_208dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomTextViewMidBlack"
        android:text="@string/tv_dialog_self_writing_title"
        android:textSize="@dimen/size_18dp"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:textColor="@color/purple_active"
        android:gravity="center"

        android:layout_marginTop="@dimen/size_44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/tv_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_dialog_self_writing_content"
        android:textSize="@dimen/size_13dp"
        android:textColor="@color/mid_black"
        android:maxWidth="@dimen/size_208dp"
        android:maxLines="3"
        android:gravity="center"

        android:layout_marginBottom="@dimen/size_54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="@dimen/size_74dp"
        android:layout_height="@dimen/size_36dp"
        style="@style/CustomTextViewMidBlack"
        android:text="@string/tv_dialog_confirm"
        android:textSize="@dimen/size_13dp"
        android:textColor="@color/purple_active"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="center"

        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginEnd="@dimen/size_8dp"
        android:layout_marginRight="@dimen/size_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/tv_dismiss"
        android:layout_width="@dimen/size_74dp"
        android:layout_height="@dimen/size_36dp"
        style="@style/CustomTextViewMidBlack"
        android:text="@string/tv_dialog_dismiss"
        android:textSize="@dimen/size_13dp"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="center"

        android:layout_marginBottom="@dimen/size_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_confirm" />

</androidx.constraintlayout.widget.ConstraintLayout>