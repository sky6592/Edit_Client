<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_card_radius_7dp"
    android:elevation="10dp"

    android:layout_marginTop="@dimen/margin_card_inner_text_start_and_end_20dp"
    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/size_card_home_today_sentence_width"
        android:layout_height="@dimen/size_card_home_today_sentence_height"
        android:paddingTop="@dimen/size_16dp"
        android:paddingBottom="@dimen/size_16dp"
        android:paddingStart="@dimen/margin_component_inset_20dp"
        android:paddingLeft="@dimen/margin_component_inset_20dp"
        android:layout_marginEnd="@dimen/margin_component_inset_20dp"
        android:layout_marginRight="@dimen/margin_component_inset_20dp">
        <TextView
            android:id="@+id/tv_today_sentence_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomTextViewMidBlack"
            android:text="@string/tv_card_writer"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="@dimen/size_tv_card_writer_14dp"
            android:textColor="@color/purple_active"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tv_today_sentence_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomTextViewMidBlack"
            android:text="@string/tv_card_position"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textSize="@dimen/size_tv_card_writer_14dp"

            android:paddingStart="@dimen/size_5dp"
            android:paddingLeft="@dimen/size_5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_today_sentence_writer" />
        <TextView
            android:id="@+id/tv_today_sentence_content"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:maxLines="4"

            style="@style/CustomTextViewMidBlack"
            android:text="@string/tv_sentence_content_example"
            android:textSize="@dimen/size_tv_card_content_12dp"

            android:layout_marginTop="@dimen/size_14dp"
            app:layout_constraintTop_toBottomOf="@id/tv_today_sentence_writer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>