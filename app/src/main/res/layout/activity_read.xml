<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Title -->
        <LinearLayout
            android:id="@+id/linear_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_below_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_common"
            android:paddingTop="@dimen/padding_common">

            <ImageView
                android:id="@+id/iv_back_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_before_24" />


            <TextView
                android:id="@+id/tv_title_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center"
                android:text="@string/tv_title_select"
                android:textColor="@color/black" />

        </LinearLayout>

        <!--Choose Info-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:orientation="vertical">

            <!--닉네임님-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nick_name_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:text="@string/tv_nick_name_select_type"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/tv_18sp" />

                <TextView
                    android:id="@+id/tv_info_one_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:text="@string/tv_info_one_select_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_18sp" />
            </LinearLayout>

            <!--직군을 선택해주세요!-->
            <TextView
                android:id="@+id/tv_info_two_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center"
                android:text="@string/tv_info_read"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_18sp" />
        </LinearLayout>

        <!--스크롤뷰설치하기!!!-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!--스크롤뷰 자식뷰-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_20dp">

                <!--1번-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="41dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_one_title_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/tv_13sp"
                        android:textStyle="normal"
                        tools:text="@string/tv_one_title_read" />

                    <TextView
                        android:id="@+id/tv_one_content_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:lineSpacingExtra="5sp"
                        android:paddingLeft="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/tv_12sp"
                        android:textStyle="normal"
                        tools:text="@string/tv_one_content_read" />
                </LinearLayout>

                <!--2번-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="41dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_two_title_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/tv_13sp"
                        android:textStyle="normal"
                        tools:text="@string/tv_two_title_read" />

                    <TextView
                        android:id="@+id/tv_two_content_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:lineSpacingExtra="5sp"
                        android:paddingLeft="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/tv_12sp"
                        android:textStyle="normal"
                        tools:text="@string/tv_two_content_read" />
                </LinearLayout>

                <!--3번-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="41dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_three_title_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/tv_13sp"
                        android:textStyle="normal"
                        tools:text="@string/tv_three_title_read" />

                    <TextView
                        android:id="@+id/tv_three_content_read"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:lineSpacingExtra="5sp"
                        android:paddingLeft="@dimen/size_15dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/tv_12sp"
                        android:textStyle="normal"
                        tools:text="@string/tv_three_content_read" />
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <!--Next Button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_20dp"
                android:gravity="top"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:gravity="center|center_horizontal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_12sp"
                    android:gravity="center_vertical"
                    android:textStyle="normal"
                    tools:text="@string/tv_check_info_read" />

            </LinearLayout>

            <!-- Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_job_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/very_light_pink"
                android:text="@string/tv_next_info"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</layout>