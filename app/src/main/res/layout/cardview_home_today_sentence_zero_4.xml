<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_card_radius_7dp"
    android:elevation="@dimen/size_10dp"

    android:layout_marginTop="@dimen/size_20dp"
    android:layout_marginBottom="@dimen/size_20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/size_294dp"
        android:layout_height="@dimen/size_150dp">
        <ImageView
            android:id="@+id/iv_flower_red"
            android:layout_width="@dimen/size_iv_flower_red_width"
            android:layout_height="@dimen/size_iv_flower_red_height"
            android:src="@drawable/ic_graphic_flower_red"
            android:scaleType="fitXY"

            android:layout_marginTop="@dimen/size_31dp"
            android:layout_marginStart="@dimen/size_56dp"
            android:layout_marginLeft="@dimen/size_56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageView
            android:id="@+id/iv_leaf_tripple"
            android:layout_width="@dimen/size_iv_leaf_double_width"
            android:layout_height="@dimen/size_iv_leaf_double_height"
            android:src="@drawable/ic_graphic_leaf_triple"
            android:scaleType="fitXY"
            android:rotation="-30"

            android:layout_marginTop="@dimen/size_10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_flower_red" />
        <ImageView
            android:id="@+id/iv_flower_yellow"
            android:layout_width="@dimen/size_iv_flower_yellow_width"
            android:layout_height="@dimen/size_iv_flower_yellow_height"
            android:src="@drawable/ic_graphic_flower_yellow"
            android:scaleType="fitXY"
            android:rotation="44"

            android:layout_marginBottom="@dimen/size_26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_leaf_tripple" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>