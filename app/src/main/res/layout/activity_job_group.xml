<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Title -->
        <LinearLayout
            android:id="@+id/linear_select_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_bg"
            android:elevation="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_common"
            android:paddingTop="@dimen/padding_common">

            <ImageView
                android:id="@+id/iv_back_select_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigate_before_24" />

            <!--  여기서부터 작업 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center"
                android:text="@string/tv_title_select"
                android:textColor="@color/black" />

        </LinearLayout>

        <!--Choose Info-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:orientation="vertical">

            <!--닉네임님-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nick_name_select_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:text="@string/tv_nick_name_select_type"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/tv_18sp" />

                <TextView
                    android:id="@+id/tv_info_one_select_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:text="@string/tv_info_one_select_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_18sp" />
            </LinearLayout>

            <!--역할을 선택해주세요!-->
            <TextView
                android:id="@+id/tv_info_two_select_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center"
                android:text="@string/tv_info_two_select_type"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_18sp" />
        </LinearLayout>

        <!--Next Button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom">

            <!-- Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_select_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/very_light_pink"
                android:enabled="false"
                android:text="@string/tv_next_info"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</layout>