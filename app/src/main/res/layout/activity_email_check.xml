<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Title -->
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_54dp"
                    app:contentInsetStart="@dimen/size_20dp"
                    app:contentInsetEnd="@dimen/size_20dp"
                    android:background="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/iv_back_email_check"
                            android:layout_width="@dimen/size_24dp"
                            android:layout_height="@dimen/size_24dp"
                            android:src="@drawable/icon_back"
                            android:background="@color/transparent"
                            android:scaleType="fitXY"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                        <TextView
                            android:id="@+id/tv_title_email_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/CustomTextViewMidBlack"
                            android:text="@string/tv_title_certification_email"
                            android:textSize="@dimen/size_tv_title_15dp"
                            android:fontFamily="@font/noto_sans_kr_medium"
                            android:background="@color/transparent"
                            android:gravity="center"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>

                <!--Choose Info-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:orientation="vertical">

                    <!--설명-->
                    <TextView
                        android:id="@+id/tv_info_two_email_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:gravity="center"
                        android:text="@string/tv_info_email_check"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_18dp" />
                </LinearLayout>

                <!--Enter Email-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/padding_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="@string/tv_email_info"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_15dp" />

                    <EditText
                        android:id="@+id/et_email_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionSearch"
                        android:background="@drawable/shape_et_btn_info"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:includeFontPadding="false"
                        android:paddingVertical="@dimen/size_10dp"
                        android:paddingHorizontal="@dimen/size_14dp"
                        android:paddingTop="@dimen/hint_padding_5dp"
                        android:textSize="@dimen/size_15dp" />

                    <TextView
                        android:id="@+id/tv_caption_email_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="@string/tv_caption_email_check"
                        android:textColor="@color/very_light_pink"
                        android:textSize="@dimen/size_10dp" />

                </LinearLayout>

                <!--Next Button-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="@dimen/padding_20dp"
                        tools:text="@string/tv_bottom_email_check"
                        />


                    <!-- Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_email_check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/very_light_pink"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:imeOptions="actionSearch"
                        android:text="@string/btn_email_check"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>