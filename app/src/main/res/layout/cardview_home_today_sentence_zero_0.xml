<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/size_card_radius_7dp"
    android:elevation="10dp"

    android:layout_marginTop="@dimen/margin_card_inner_text_start_and_end_20dp"
    android:layout_marginBottom="@dimen/margin_card_inner_text_start_and_end_20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/size_card_home_today_sentence_width"
        android:layout_height="@dimen/size_card_home_today_sentence_height"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_today_sentence_zero_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CustomTextViewMidBlack"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:textColor="@color/purple_active"
            android:text="@string/tv_card_zero_title"
            android:textSize="@dimen/size_tv_title_15dp"

            android:layout_marginTop="@dimen/size_48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/tv_today_sentence_zero_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            style="@style/CustomTextViewMidBlack"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:text="@string/tv_card_zero_content"
            android:textSize="@dimen/size_tv_card_content_12dp"

            android:layout_marginBottom="@dimen/size_48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <ImageView
            android:id="@+id/iv_star_left"
            android:layout_width="@dimen/size_15dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@drawable/ic_graphic_star_shape"
            android:scaleType="fitXY"

            android:layout_marginTop="@dimen/size_11dp"
            android:layout_marginStart="@dimen/size_12dp"
            android:layout_marginLeft="@dimen/size_12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageView
            android:id="@+id/iv_dot_left"
            android:layout_width="@dimen/size_6dp"
            android:layout_height="@dimen/size_6dp"
            android:src="@drawable/ic_graphic_dot_shape"
            android:scaleType="fitXY"

            android:layout_marginStart="@dimen/size_11dp"
            android:layout_marginLeft="@dimen/size_11dp"
            app:layout_constraintTop_toTopOf="@id/iv_star_left"
            app:layout_constraintStart_toEndOf="@id/iv_star_left" />
        <ImageView
            android:id="@+id/iv_donuts_left"
            android:layout_width="@dimen/size_10dp"
            android:layout_height="@dimen/size_10dp"
            android:src="@drawable/ic_graphic_donuts_shape"
            android:scaleType="fitXY"

            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginStart="@dimen/size_9dp"
            android:layout_marginLeft="@dimen/size_9dp"
            app:layout_constraintTop_toBottomOf="@id/iv_star_left"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_star_right"
            android:layout_width="@dimen/size_15dp"
            android:layout_height="@dimen/size_20dp"
            android:src="@drawable/ic_graphic_star_shape"
            android:scaleType="fitXY"

            android:layout_marginBottom="@dimen/size_11dp"
            android:layout_marginEnd="@dimen/size_12dp"
            android:layout_marginRight="@dimen/size_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <ImageView
            android:id="@+id/iv_dot_right"
            android:layout_width="@dimen/size_6dp"
            android:layout_height="@dimen/size_6dp"
            android:src="@drawable/ic_graphic_dot_shape"
            android:scaleType="fitXY"

            android:layout_marginEnd="@dimen/size_11dp"
            android:layout_marginRight="@dimen/size_11dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_star_right"
            app:layout_constraintEnd_toStartOf="@id/iv_star_right" />
        <ImageView
            android:id="@+id/iv_donuts_right"
            android:layout_width="@dimen/size_10dp"
            android:layout_height="@dimen/size_10dp"
            android:src="@drawable/ic_graphic_donuts_shape"
            android:scaleType="fitXY"

            android:layout_marginBottom="@dimen/size_6dp"
            android:layout_marginEnd="@dimen/size_9dp"
            android:layout_marginRight="@dimen/size_9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/iv_star_right" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>