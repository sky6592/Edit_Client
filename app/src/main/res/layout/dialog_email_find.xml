<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        <androidx.cardview.widget.CardView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            app:cardCornerRadius="@dimen/size_card_radius_7dp">-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/size_280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_dialog_title_email_find"
                style="@style/CustomTextViewMidBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_42dp"
                android:layout_marginLeft="@dimen/size_42dp"
                android:layout_marginTop="@dimen/size_44dp"
                android:layout_marginEnd="@dimen/size_42dp"
                android:layout_marginRight="@dimen/size_42dp"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center"
                android:text="@string/tv_dialog_title_find_email"
                android:textColor="@color/purple_active"
                android:textSize="@dimen/size_18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_dialog_content_email_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center"
                android:maxWidth="@dimen/size_208dp"
                android:maxLines="3"
                android:text="@string/tv_dialog_content_find_email"
                android:textColor="@color/mid_black"
                android:textSize="@dimen/size_13dp"
                app:layout_constraintBottom_toTopOf="@id/tv_dialog_api_email_find"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_title_email_find" />

            <TextView
                android:id="@+id/tv_dialog_api_email_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="3"
                android:textColor="@color/mid_black"
                android:textSize="@dimen/size_13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_dialog_content_email_find" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--        </androidx.cardview.widget.CardView>-->
    </LinearLayout>
</layout>