<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Title -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_54dp"
                app:contentInsetStart="@dimen/size_20dp"
                app:contentInsetEnd="@dimen/size_20dp"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/iv_back_email_find"
                        android:layout_width="@dimen/size_24dp"
                        android:layout_height="@dimen/size_24dp"
                        android:src="@drawable/icon_back"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    <TextView
                        android:id="@+id/tv_title_email_find"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/CustomTextViewMidBlack"
                        android:text="@string/btn_email_find"
                        android:textSize="@dimen/size_tv_title_15dp"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:background="@color/transparent"
                        android:gravity="center"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>

            <!--Info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:orientation="vertical">


                <!--직을 선택해주세요!-->
                <TextView
                    android:id="@+id/tv_info_two_email_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:gravity="center"
                    android:text="@string/tv_title_email_find"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_18dp" />
            </LinearLayout>

            <!--Enter Content-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_20dp">

                <!-- Name -->
                <LinearLayout
                    android:id="@+id/linear_name_email_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_email_find"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="@string/tv_name_info"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_15dp" />

                    <EditText
                        android:id="@+id/et_name_email_find"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5dp"
                        android:background="@drawable/shape_et_btn_info"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:hint="@string/hint_name_info"
                        android:imeOptions="actionSearch"
                        android:inputType="textPersonName|textNoSuggestions"
                        android:paddingHorizontal="@dimen/hint_padding_10dp"
                        android:paddingVertical="@dimen/padding_2.5dp"
                        android:textSize="@dimen/size_15dp" />

                    <TextView
                        android:id="@+id/tv_name_caption_email_find"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="@string/tv_name_caption_info"
                        android:textColor="@color/very_light_pink"
                        android:textSize="@dimen/size_10dp" />
                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:id="@+id/linear_phone_email_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_phone_email_find"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10dp"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="@string/tv_phone_info"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_15dp" />

                    <EditText
                        android:id="@+id/et_phone_email_find"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5dp"
                        android:background="@drawable/shape_et_btn_info"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:hint="@string/hint_phone_info"
                        android:imeOptions="actionSearch"
                        android:inputType="phone|textNoSuggestions"
                        android:paddingHorizontal="@dimen/hint_padding_10dp"
                        android:paddingVertical="@dimen/padding_2.5dp"
                        android:textSize="@dimen/size_15dp" />

                    <TextView
                        android:id="@+id/tv_phone_caption_email_find"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_regular"
                        android:text="@string/tv_phone_caption_info"
                        android:textColor="@color/very_light_pink"
                        android:textSize="@dimen/size_10dp" />
                </LinearLayout>
            </LinearLayout>

            <!--Next Button-->
    <!--        <LinearLayout-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_weight="1"-->
    <!--            android:gravity="bottom"-->
    <!--            android:orientation="vertical">-->

    <!--        </LinearLayout>-->
            <!-- Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_email_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/very_light_pink"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:imeOptions="actionSearch"
                android:text="@string/btn_email_find"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>