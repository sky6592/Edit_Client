<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_below_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_common"
            android:paddingTop="@dimen/padding_common">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back_email_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_navigate_before_24" />


                <TextView
                    android:id="@+id/tv_title_email_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:gravity="center"
                    android:text="@string/btn_email_find"
                    android:textColor="@color/black" />
            </LinearLayout>


        </LinearLayout>

        <!--Info-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:orientation="vertical">


            <!--직을 선택해주세요!-->
            <TextView
                android:id="@+id/tv_info_two_email_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:gravity="center"
                android:text="@string/tv_title_email_find"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_18sp" />
        </LinearLayout>

        <!--Enter Content-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_20dp">

            <!-- Name -->
            <LinearLayout
                android:id="@+id/linear_name_email_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_email_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="@string/tv_name_info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_15sp" />

                <EditText
                    android:id="@+id/et_name_email_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:background="@drawable/shape_et_btn_info"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:hint="@string/hint_name_info"
                    android:imeOptions="actionSearch"
                    android:inputType="textPersonName|textNoSuggestions"
                    android:paddingHorizontal="@dimen/hint_padding_10dp"
                    android:paddingTop="@dimen/hint_padding_5dp"
                    android:textSize="@dimen/tv_15sp" />

                <TextView
                    android:id="@+id/tv_name_caption_email_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="@string/tv_name_caption_info"
                    android:textColor="@color/very_light_pink"
                    android:textSize="@dimen/tv_10sp" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:id="@+id/linear_phone_email_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_phone_email_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="@string/tv_phone_info"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_15sp" />

                <EditText
                    android:id="@+id/et_phone_email_find"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5dp"
                    android:background="@drawable/shape_et_btn_info"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:hint="@string/hint_phone_info"
                    android:imeOptions="actionSearch"
                    android:inputType="phone|textNoSuggestions"
                    android:paddingHorizontal="@dimen/hint_padding_10dp"
                    android:paddingTop="@dimen/hint_padding_5dp"
                    android:textSize="@dimen/tv_15sp" />

                <TextView
                    android:id="@+id/tv_phone_caption_email_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:text="@string/tv_phone_caption_info"
                    android:textColor="@color/very_light_pink"
                    android:textSize="@dimen/tv_10sp" />
            </LinearLayout>
        </LinearLayout>

        <!--Next Button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <!-- Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_email_find"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/very_light_pink"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:imeOptions="actionSearch"
                android:text="@string/btn_email_find"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</layout>