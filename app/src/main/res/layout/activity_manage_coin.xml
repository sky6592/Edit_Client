<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_54dp"
            app:contentInsetStart="@dimen/size_20dp"
            app:contentInsetEnd="@dimen/size_20dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/ib_back"
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:src="@drawable/icon_back"
                    android:background="@color/transparent"
                    android:scaleType="fitXY"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CustomTextViewMidBlack"
                    android:text="@string/tv_menu_manage_coin"
                    android:textSize="@dimen/size_tv_title_15dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:background="@color/transparent"
                    android:gravity="center"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_coin_board"
            android:layout_width="@dimen/size_240dp"
            android:layout_height="@dimen/size_113dp"
            android:elevation="@dimen/size_10dp"
            app:cardCornerRadius="@dimen/size_4dp"

            android:paddingTop="@dimen/size_16dp"
            android:paddingBottom="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_31dp"
            android:layout_marginStart="@dimen/size_60dp"
            android:layout_marginLeft="@dimen/size_60dp"
            android:layout_marginEnd="@dimen/size_60dp"
            android:layout_marginRight="@dimen/size_60dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/size_24dp"
                        android:layout_height="@dimen/size_24dp"
                        android:src="@drawable/icon_manage_coin"
                        android:background="@color/transparent"
                        android:scaleType="centerInside" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_manage_coin_wallet"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/mid_black"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/size_6dp" />
                    <TextView
                        android:id="@+id/tv_coin_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_sympathy_count"
                        android:textSize="@dimen/size_16dp"
                        android:textColor="@color/mid_black"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/size_10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/size_24dp"
                        android:layout_height="@dimen/size_24dp"
                        android:src="@drawable/icon_manage_thanks"
                        android:background="@color/transparent"
                        android:scaleType="centerInside" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_manage_coin_thanks"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/mid_black"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/size_6dp" />
                    <TextView
                        android:id="@+id/tv_coin_thanks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_sympathy_count"
                        android:textSize="@dimen/size_16dp"
                        android:textColor="@color/mid_black"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/size_10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/size_24dp"
                        android:layout_height="@dimen/size_24dp"
                        android:src="@drawable/icon_manage_adoption"
                        android:background="@color/transparent"
                        android:scaleType="centerInside" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_manage_coin_adoption"
                        android:textSize="@dimen/size_12dp"
                        android:textColor="@color/mid_black"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/size_6dp" />
                    <TextView
                        android:id="@+id/tv_coin_adoption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_sympathy_count"
                        android:textSize="@dimen/size_16dp"
                        android:textColor="@color/mid_black"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        android:layout_marginTop="@dimen/size_10dp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_graphic"
            android:layout_width="@dimen/size_99dp"
            android:layout_height="@dimen/size_110dp"
            android:src="@drawable/ic_graphic_thanks"

            android:layout_marginTop="@dimen/size_66dp"
            app:layout_constraintTop_toBottomOf="@id/cv_coin_board"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/tv_to_be_develop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_to_be_develop_title"
            android:textSize="@dimen/size_15dp"
            android:textColor="@color/purple_active"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_43dp"
            app:layout_constraintTop_toBottomOf="@id/iv_graphic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_to_be_develop_coin_content"
            android:textSize="@dimen/size_12dp"
            android:textColor="@color/mid_black"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_13dp"
            app:layout_constraintTop_toBottomOf="@id/tv_to_be_develop_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>