<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Edit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_inactive</item>
        <item name="colorPrimaryVariant">@color/purple_active</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_active</item>
        <item name="colorSecondaryVariant">@color/purple_active</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Font family -->
        <item name="android:textViewStyle">@style/TextViewFontStyle</item>
        <item name="android:editTextStyle">@style/EditTextFontStyle</item>
        <item name="android:buttonStyle">@style/ButtonFontStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/CheckboxFontStyle</item>

    </style>
</resources>